<title>Vinyl: <%= reviews[0].username %></title>

<%- include partials/header.ejs %>

  <div class='user-column'>
    <h2><%= reviews[0].username %></h2>
    <img class='profile-pic' src='<%= reviews[0].picture %>' style='height:200px'/>
    <div class='box'>
      <p>Member since: <%= reviews[0].join_date %></p>
      <button class='edit-profile'>Edit Profile</button>
    </div>
  </div>

  <div class='post-column'>
    <h2>Reviews</h2>
    <% if (reviews[0].review_id) {
      reviews.forEach( review => { %>
        <div class='box blue-box'>
          <p> <a href="/albums/<%= review.title%>" > <%= review.title %> </a> </p>
          <p> <%= review.review_date %> </p>
          <p> <%= review.content %> </p>
          <p> by <a href="/profile/<%= review.username%>" > <%= review.username %> </a> </p>
        </div>
      <% })
    } else { %>
      <p class='box blue-box'> This user has no reviews </p>
    <% } %>
  </div>

<%- include partials/footer.ejs %>
